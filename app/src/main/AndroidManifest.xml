            <!--android:permission="boaviagem.casadocodigo.com.br.boaviagem.provider.permission.ALL"> -->
            >
        </provider>
        <activity
            android:name=".view.BoaViagemActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.DashboardActivity"
            android:label="@string/title_activity_dashboard" >
        </activity>
        <activity
            android:name=".view.ViagemActivity"
            android:label="@string/title_activity_viagem" >
        </activity>
        <activity
            android:name=".view.GastoActivity"
            android:label="@string/title_activity_gasto" >
        </activity>
        <activity
            android:name=".view.ViagemListActivity"
            android:label="@string/title_activity_list" >
        </activity>
        <activity
            android:name=".view.GastoListActivity"
            android:label="@string/list_spent" >
        </activity>
        <activity
            android:name=".view.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
